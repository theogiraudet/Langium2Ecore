{
  "compilerOptions": {
    "target": "ES2017",
    "module": "Node16",
    "lib": [
      "ESNext"
    ],
    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.langium"
  ],
  "exclude": [
    "out",
    "node_modules"
  ]
}